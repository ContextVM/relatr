{
  "name": "relatr",
  "description": "Decentralized trust metric service for the Nostr ecosystem that computes personalized trust scores from the unique perspective of a public key",
  "version": "0.1.5",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run manager.ts",
    "mcp": "bun run src/mcp/server.ts",
    "lint": "eslint src/",
    "format": "prettier --write .",
    "build": "bun build ./src/mcp/server.ts --outdir ./dist --target bun --external \"@duckdb/node-api\" --external \"@duckdb/node-bindings-*\"",
    "compile": "bun build --compile --minify --sourcemap ./src/mcp/server.ts --outfile relatr --external \"@duckdb/node-api\" --external \"@duckdb/node-bindings-*\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.48.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@contextvm/sdk": "^0.1.39",
    "@duckdb/node-api": "^1.4.2-r.1",
    "applesauce-core": "^4.4.2",
    "applesauce-relay": "^4.4.2",
    "nostr-social-duck": "^0.1.24",
    "nostr-tools": "^2.18.2",
    "process-pastry": "https://github.com/hzrd149/process-pastry",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "zod": "^3.25.76"
  },
  "optionalDependencies": {
    "@duckdb/node-bindings-linux-x64": "^1.4.2-r.1",
    "@duckdb/node-bindings-linux-arm64": "^1.4.2-r.1",
    "@duckdb/node-bindings-darwin-x64": "^1.4.2-r.1",
    "@duckdb/node-bindings-darwin-arm64": "^1.4.2-r.1",
    "@duckdb/node-bindings-win32-x64": "^1.4.2-r.1"
  }
}
